    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StockExchangeCity.Game.Tools.MapEditor"
	xmlns:views="clr-namespace:StockExchangeCity.Game.Tools.MapEditor.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="StockExchangeCity.Game.Tools.MapEditor">


	<ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" Title="Главная" />
	
