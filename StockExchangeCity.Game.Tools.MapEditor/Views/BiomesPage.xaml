<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:ui="clr-namespace:StockExchangeCity.UI.Biomes;assembly=StockExchangeCity.UI"
			 xmlns:biomes="clr-namespace:StockExchangeCity.GameEntities.Map;assembly=StockExchangeCity.GameEntities"
			 x:Class="StockExchangeCity.Game.Tools.MapEditor.Views.BiomesPage"
             Title="BiomesPage">
	<VerticalStackLayout>
		<ListView 
			ItemsSource="{Binding Items}"
			Header="Header"
			Footer="Footer"
			HasUnevenRows="True"
			SeparatorVisibility="None">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ScrollView>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="48"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Label Grid.Column="1" 
									   Text="{Binding Name}" />
								<ui:BiomeCardView 
									Grid.Column="1"
									BiomeItem="{Binding ., Converter={StaticResource DebugConverter}}"/>

							</Grid>
						</ScrollView>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</VerticalStackLayout>
</ContentPage>